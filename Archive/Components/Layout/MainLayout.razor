@inherits LayoutComponentBase

<MudThemeProvider Theme="@_cozyTheme" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="2" Color="Color.Primary" Fixed="true">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" 
                       Color="Color.Inherit" 
                       Edge="Edge.Start" 
                       OnClick="@((e) => DrawerToggle())" />
        
        <MudText Typo="Typo.h6" Class="ml-3" Style="font-weight: 500;">The Archivist</MudText>
        
        <MudSpacer />
        
        <MudIconButton Icon="@Icons.Material.Filled.MoreVert" Color="Color.Inherit" Edge="Edge.End" />
    </MudAppBar>

    <MudDrawer @bind-Open="_drawerOpen" ClipMode="DrawerClipMode.Always" Elevation="2">
        <NavMenu />
    </MudDrawer>

    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large" Class="mt-4 mb-4">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }

    // --- THEME DEFINITION ---
    private MudTheme _cozyTheme = new MudTheme()
    {
        PaletteLight = new PaletteLight()
        {
            // The "Brand" colors
            Primary = "#6D4C41",        // Warm Coffee Brown
            Secondary = "#558B2F",      // Moss Green
            Tertiary = "#F9A825",       // Golden Yellow (for highlights)

            // The "Canvas" colors
            Background = "#FAF3E0",     // Beige/Parchment (The page background)
            Surface = "#FFFFFF",        // White (Card background)
            AppbarBackground = "#4E342E", // Dark Wood (Top Bar)
            DrawerBackground = "#FFF8E1", // Light Cream (Sidebar)
            
            // Text colors
            TextPrimary = "#3E2723",    // Very Dark Brown (easier on eyes than pure black)
            TextSecondary = "#5D4037",  // Medium Brown
            
            // Interaction colors
            ActionDefault = "#5D4037",  // Icon colors
        },
        
        // Optional: Typography tweaks to make it feel more "Classic"
        Typography = new Typography()
        {
            Default = new Default()
            {
                FontFamily = new[] { "Georgia", "Times New Roman", "serif" } 
            }
        }
    };
}